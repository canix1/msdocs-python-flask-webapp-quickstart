<!DOCTYPE html>
<html>
<head>
    <title>CLOUD X-RAY</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding: 10px;
            background-color: #162447;
            border-radius: 8px;
        }

        .logo {
            width: 90px;
            height: 90px;
            object-fit: contain; /* Detta säkerställer att bilden behåller sina proportioner */
        }

        .title {
            color: #4ecca3;
            font-size: 24px;
            margin: 0;
        }

        .search-container {
            background-color: #162447;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .search-box {
            width: 100%;
            padding: 12px;
            border: 2px solid #4ecca3;
            background-color: #1a1a2e;
            color: #e6e6e6;
            border-radius: 4px;
            font-size: 16px;
            box-sizing: border-box;
        }

        .search-box:focus {
            outline: none;
            border-color: #45b08c;
            box-shadow: 0 0 5px rgba(78, 204, 163, 0.5);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #162447;
            border-radius: 8px;
            overflow: hidden;
        }

        th {
            background-color: #1f4068;
            color: #4ecca3;
            padding: 15px;
            text-align: left;
            font-weight: 600;
        }

        td {
            padding: 12px 15px;
            border-bottom: 1px solid #233861;
        }

        tr:hover {
            background-color: #233861;
        }

        /* Pulserande animering för sökrutan */
        @keyframes glow {
            0% {
                box-shadow: 0 0 5px rgba(78, 204, 163, 0.2);
            }
            50% {
                box-shadow: 0 0 20px rgba(78, 204, 163, 0.4);
            }
            100% {
                box-shadow: 0 0 5px rgba(78, 204, 163, 0.2);
            }
        }

        .search-box:focus {
            animation: glow 2s infinite;
        }

        th {
            cursor: pointer;
            user-select: none;
            position: relative;
        }

        th:hover {
            background-color: #2a4d8f;
        }

        th:after {
            content: '↕';
            position: absolute;
            right: 8px;
            opacity: 0.5;
        }

        th.sort-asc:after {
            content: '↑';
            opacity: 1;
        }

        th.sort-desc:after {
            content: '↓';
            opacity: 1;
        }

        .filters-container {
        background-color: #162447;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .module-select {
            width: 100%;
            padding: 10px;
            background-color: #1a1a2e;
            color: #e6e6e6;
            border: 2px solid #4ecca3;
            border-radius: 4px;
            margin-top: 10px;
        }

        .filter-label {
            display: block;
            margin-bottom: 5px;
            color: #4ecca3;
            font-weight: 500;
        }

        .multiselect-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 10px;
        }

        .module-checkbox {
            display: flex;
            align-items: center;
            background-color: #1a1a2e;
            padding: 8px 12px;
            border-radius: 4px;
            border: 1px solid #233861;
        }

        .module-checkbox input[type="checkbox"] {
            margin-right: 8px;
        }

        .module-checkbox:hover {
            background-color: #233861;
        }

        body {
            background-color: #1a1a2e;
            color: #e6e6e6;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding: 10px;
            background-color: #162447;
            border-radius: 8px;
        }


        .stats-bar {
            background-color: #162447;
            padding: 10px 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .stats {
            color: #4ecca3;
        }

        .export-btn {
            background-color: #4ecca3;
            color: #1a1a2e;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s;
        }

        .export-btn:hover {
            background-color: #4ecca3;
        }

        .recovery-btn {
            background-color: #ae2a2a;
            color: #1a1a2e;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s;
        }

        .recover-btn:hover {
            background-color: #ae2a2a;
        }

        .search-container {
            background-color: #162447;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .search-help {
            font-size: 0.9em;
            color: #4ecca3;
            margin-top: 8px;
            padding: 8px;
            background-color: #1a1a2e;
            border-radius: 4px;
        }

        .filters-container {
            background-color: #162447;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        .filter-section {
            background-color: #1a1a2e;
            padding: 15px;
            border-radius: 4px;
        }

        .filter-label {
            display: block;
            margin-bottom: 10px;
            color: #4ecca3;
            font-weight: 500;
        }

        .multiselect-container {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }

        @media (max-width: 768px) {
            .filters-container {
                grid-template-columns: 1fr;
            }
            
            .stats-bar {
                flex-direction: column;
                gap: 10px;
            }
        }

        .unselect-btn {
            background-color: #1f4068;
            color: #4ecca3;
            border: 1px solid #4ecca3;
            padding: 4px 8px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 0.9em;
            margin-bottom: 8px;
            transition: all 0.3s ease;
        }

        .unselect-btn:hover {
            background-color: #4ecca3;
            color: #1f4068;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1 class="title">CLOUD X-RAY</h1>
        <img src="{{ url_for('static', filename='cloudxray.webp') }}" alt="CloudXRay Logo" class="logo">
    </div>
    

    <div class="stats-bar">
        <div class="stats">
            Showing <span id="visibleRows">0</span> of <span id="totalRows">0</span> entries
        </div>
        <button id="recoveryBtn" class="recovery-btn">Recovery</button>
        <button id="exportBtn" class="export-btn">Export to CSV</button>
    </div>

    <div class="search-container">
        <input type="text" id="searchBox" class="search-box" placeholder="Search across all columns...">
        <div class="search-help">
            Advanced search: Use quotes for exact match ("exact phrase"), AND/OR for multiple terms, 
            -term to exclude. Example: "owner" AND teams -chat
        </div>
    </div>

    <div class="filters-container">
        <div class="filter-section">
            <label class="filter-label">Module:</label>
            <button class="unselect-btn" id="unselectModules">Unselect All</button>
            <div id="moduleFilters" class="multiselect-container"></div>
        </div>
        <div class="filter-section">
            <label class="filter-label">Type:</label>
            <button class="unselect-btn" id="unselectTypes">Unselect All</button>
            <div id="typeFilters" class="multiselect-container"></div>
        </div>        
        <div class="filter-section">
            <label class="filter-label">Permissions:</label>
            <button class="unselect-btn" id="unselectPermissions">Unselect All</button>
            <div id="permissionFilters" class="multiselect-container"></div>
        </div>
    </div>

    <div id="results">
        <table id="dataTable">
            <thead><tr></tr></thead>
            <tbody></tbody>
        </table>
    </div>

    <script>

        const searchBox = document.getElementById('searchBox');
        const table = document.getElementById('dataTable');
        const moduleFilters = document.getElementById('moduleFilters');
        const typeFilters = document.getElementById('typeFilters');
        let currentData = [];
        let allData = [];
        let currentSort = {
            column: null,
            direction: 'asc'
        };
    
        const permissionFilters = document.getElementById('permissionFilters');
        const exportBtn = document.getElementById('exportBtn');
        const recoveryBtn = document.getElementById('recoveryBtn');
        const visibleRowsSpan = document.getElementById('visibleRows');
        const totalRowsSpan = document.getElementById('totalRows');


        const columnOrder = [
            'Identity_ObjectID',
            'userPrincipalName',    // Ny kolumn
            'Module',
            'Target_Type', // Ny kolumn            
            'Resource_FriendlyName',
            'Target_Resource',            
            'Permission_Name',
            'Backup_DateTime'
        ];

        const columnMapping = {
            'Identity_ObjectID': 'Identity ID',
            'userPrincipalName': 'User Principal Name', // Ny mappning
            'Module': 'Module Type',
            'Backup_DateTime': 'Backup Time',
            'Target_Resource': 'Resource ID',
            'Resource_FriendlyName': 'Resource Name',
            'Permission_Name': 'Permission',
            'Target_Type': 'Type',     // Ny mappning
            'Parent_Resource_Name': 'Parent Resource Name'
        };

        // Add unselect button functionality
        document.getElementById('unselectModules').addEventListener('click', () => {
            moduleFilters.querySelectorAll('input[type="checkbox"]').forEach(cb => {
                cb.checked = false;
            });
            filterData();
        });

        document.getElementById('unselectTypes').addEventListener('click', () => {
            typeFilters.querySelectorAll('input[type="checkbox"]').forEach(cb => {
                cb.checked = false;
            });
            filterData();
        });

        document.getElementById('unselectPermissions').addEventListener('click', () => {
            permissionFilters.querySelectorAll('input[type="checkbox"]').forEach(cb => {
                cb.checked = false;
            });
            filterData();
        });        
               
        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        // Funktion för att få unika modultyper
        function getUniqueModules(data) {
            return [...new Set(data.map(item => item.Module))].sort();
        }
    
        // Funktion för att skapa checkboxar
        function createModuleFilters(modules) {
            moduleFilters.innerHTML = modules.map(module => `
                <label class="module-checkbox">
                    <input type="checkbox" value="${module}" checked>
                    ${module}
                </label>
            `).join('');
    
            moduleFilters.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
                checkbox.addEventListener('change', filterData);
            });
        }
    
        // Replace your existing filterData function with this:
        async function filterData() {
            const searchText = searchBox.value.toLowerCase();
            const selectedModules = Array.from(moduleFilters.querySelectorAll('input[type="checkbox"]:checked'))
                .map(cb => cb.value);
            const selectedPermissions = Array.from(permissionFilters.querySelectorAll('input[type="checkbox"]:checked'))
                .map(cb => cb.value);
            const selectedTypes = Array.from(typeFilters.querySelectorAll('input[type="checkbox"]:checked'))
                .map(cb => cb.value);

            try {
                table.querySelector('tbody').innerHTML = '<tr><td colspan="8">Loading...</td></tr>';
        
                // Build query parameters
                const params = new URLSearchParams();
                if (searchText) params.append('query', searchText);
                selectedModules.forEach(module => params.append('modules[]', module));
                selectedPermissions.forEach(perm => params.append('permissions[]', perm));
                selectedTypes.forEach(type => params.append('types[]', type));

                // Fetch filtered data from server
                const response = await fetch(`/search?${params.toString()}`);
                const data = await response.json();

                // Update the table with the filtered data
                if (currentSort.column) {
                    updateTable(sortData(data, currentSort.column, currentSort.direction));
                } else {
                    updateTable(data);
                }
            } catch (error) {
                table.querySelector('tbody').innerHTML = 
                    '<tr><td colspan="8">Error loading data. Please try again.</td></tr>';
                console.error('Error:', error);
            }
        }
    
        function sortData(data, column, direction) {
            return [...data].sort((a, b) => {
                let valueA = a[column];
                let valueB = b[column];
    
                if (!isNaN(valueA) && !isNaN(valueB)) {
                    valueA = Number(valueA);
                    valueB = Number(valueB);
                }
    
                if (direction === 'asc') {
                    return valueA > valueB ? 1 : valueA < valueB ? -1 : 0;
                } else {
                    return valueA < valueB ? 1 : valueA > valueB ? -1 : 0;
                }
            });
        }


        // Uppdatera updateTable funktionen
        function updateTable(data) {
            currentData = data;
            visibleRowsSpan.textContent = data.length;
            totalRowsSpan.textContent = allData.length;
            
            if (data.length > 0) {
                // Få alla tillgängliga kolumner
                const availableColumns = Object.keys(data[0]);
                console.log('Available columns:', availableColumns);
                
                // Skapa slutlig kolumnordning
                const finalColumnOrder = columnOrder
                    .filter(col => availableColumns.includes(col))
                    .concat(availableColumns.filter(col => !columnOrder.includes(col)));
                    
                console.log('Final column order:', finalColumnOrder);
                
                // Uppdatera thead
                const headerRow = table.querySelector('thead tr');
                headerRow.innerHTML = ''; // Rensa befintliga headers
                
                finalColumnOrder.forEach(h => {
                    const th = document.createElement('th');
                    if (currentSort.column === h) {
                        th.className = `sort-${currentSort.direction}`;
                    }
                    th.dataset.column = h;
                    th.textContent = columnMapping[h] || h;
                    headerRow.appendChild(th);
                });

                // Uppdatera tbody
                const tbody = table.querySelector('tbody');
                tbody.innerHTML = data.map(row => 
                    `<tr>${finalColumnOrder.map(h => `<td>${row[h] || ''}</td>`).join('')}</tr>`
                ).join('');
            } else {
                table.querySelector('tbody').innerHTML = '';
            }
        }
        
       
    
        // Händelselyssnare för sökning
        searchBox.addEventListener('input', debounce(filterData, 300));

        // Modify initialLoad to just get initial data and set up filters

        // Sorteringshantering
        table.querySelector('thead').addEventListener('click', (e) => {
            const th = e.target.closest('th');
            if (!th) return;
    
            const column = th.dataset.column;
            let direction = 'asc';
    
            if (currentSort.column === column) {
                direction = currentSort.direction === 'asc' ? 'desc' : 'asc';
            }
    
            currentSort = { column, direction };
            filterData(); // Använd filterData istället för att sortera direkt
        });


        // Uppdaterad söklogik för avancerad sökning
        function parseSearchQuery(query) {
            const terms = [];
            let currentTerm = '';
            let inQuotes = false;

            query.split('').forEach(char => {
                if (char === '"') {
                    inQuotes = !inQuotes;
                } else if (char === ' ' && !inQuotes) {
                    if (currentTerm) terms.push(currentTerm);
                    currentTerm = '';
                } else {
                    currentTerm += char;
                }
            });
            if (currentTerm) terms.push(currentTerm);

            return terms.map(term => {
                const isExclude = term.startsWith('-');
                const isAnd = term.toUpperCase() === 'AND';
                const isOr = term.toUpperCase() === 'OR';
                return {
                    term: isExclude ? term.slice(1) : term,
                    isExclude,
                    isOperator: isAnd || isOr,
                    operator: isAnd ? 'AND' : isOr ? 'OR' : null
                };
            });
        }

        function matchesSearchTerms(item, parsedTerms) {
            let result = true;
            let currentOperator = 'AND';

            parsedTerms.forEach((termObj, index) => {
                if (termObj.isOperator) {
                    currentOperator = termObj.operator;
                    return;
                }

                const itemStr = Object.values(item).join(' ').toLowerCase();
                const matches = itemStr.includes(termObj.term.toLowerCase());
                
                if (termObj.isExclude) {
                    if (currentOperator === 'AND') result = result && !matches;
                    else result = result || !matches;
                } else {
                    if (currentOperator === 'AND') result = result && matches;
                    else result = result || matches;
                }
            });

            return result;
        }

        // Uppdaterad filterData funktion
        async function filterData() {
            const searchText = searchBox.value.toLowerCase();
            const selectedModules = Array.from(moduleFilters.querySelectorAll('input[type="checkbox"]:checked'))
                .map(cb => cb.value);
            const selectedPermissions = Array.from(permissionFilters.querySelectorAll('input[type="checkbox"]:checked'))
                .map(cb => cb.value);
            const selectedTypes = Array.from(typeFilters.querySelectorAll('input[type="checkbox"]:checked'))
                .map(cb => cb.value);

            try {
                // Build query parameters
                const params = new URLSearchParams();
                if (searchText) params.append('query', searchText);
                selectedModules.forEach(module => params.append('modules[]', module));
                selectedPermissions.forEach(perm => params.append('permissions[]', perm));
                selectedTypes.forEach(type => params.append('types[]', type));

                // Fetch filtered data from server
                const response = await fetch(`/search?${params.toString()}`);
                const data = await response.json();

                // Update the table with the filtered data
                if (currentSort.column) {
                    updateTable(sortData(data, currentSort.column, currentSort.direction));
                } else {
                    updateTable(data);
                }
            } catch (error) {
                console.error('Error filtering data:', error);
            }
        }
        // Funktion för att exportera till CSV
        function exportToCSV() {
            if (currentData.length === 0) return;

            const headers = Object.keys(currentData[0]);
            const csvContent = [
                headers.join(','),
                ...currentData.map(row => 
                    headers.map(header => {
                        const cell = row[header].toString();
                        return cell.includes(',') ? `"${cell}"` : cell;
                    }).join(',')
                )
            ].join('\n');

            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = 'teams_permissions_export.csv';
            link.click();
        }

        // Uppdaterad createFilters funktion
        function createFilters() {
            const uniqueModules = getUniqueModules(allData);
            const uniquePermissions = [...new Set(allData.map(item => item.Permission_Name))].sort();
            const uniqueTypes = [...new Set(allData.map(item => item.Target_Type))].sort();

            moduleFilters.innerHTML = uniqueModules.map(module => `
                <label class="module-checkbox">
                    <input type="checkbox" value="${module}" checked>
                    ${module}
                </label>
            `).join('');

            typeFilters.innerHTML = uniqueTypes.map(type => `
                <label class="module-checkbox">
                    <input type="checkbox" value="${type}" checked>
                    ${type}
                </label>
            `).join('');

            permissionFilters.innerHTML = uniquePermissions.map(permission => `
                <label class="module-checkbox">
                    <input type="checkbox" value="${permission}" checked>
                    ${permission}
                </label>
            `).join('');

            moduleFilters.querySelectorAll('input[type="checkbox"]').forEach(cb => 
                cb.addEventListener('change', filterData));

            typeFilters.querySelectorAll('input[type="checkbox"]').forEach(cb =>
                cb.addEventListener('change', filterData));

            permissionFilters.querySelectorAll('input[type="checkbox"]').forEach(cb => 
                cb.addEventListener('change', filterData));
        }

        // Event listeners
        searchBox.addEventListener('input', filterData);
        exportBtn.addEventListener('click', exportToCSV);
        recoveryBtn.addEventListener('click', recoveryData);

        // Modify initialLoad to just get initial data and set up filters
        async function initialLoad() {
            try {
                // Get initial data with no filters
                const response = await fetch('/search');
                const data = await response.json();
                
                if (data.length > 0) {
                    allData = data;  // Set the allData variable
                    // Create filters based on the initial data
                    const uniqueModules = [...new Set(data.map(item => item.Module))].sort();
                    const uniquePermissions = [...new Set(data.map(item => item.Permission_Name))].sort();
                    const uniqueTypes = [...new Set(data.map(item => item.Target_Type))].sort();

                    // Set up filter checkboxes
                    createFilters();  // Pass the data arrays
                    
                    // Display the data
                    updateTable(data);
                }
            } catch (error) {
                console.error('Error loading initial data:', error);
            }
        }

        // Starta applikationen
        initialLoad();
    </script>
</body>
</html>